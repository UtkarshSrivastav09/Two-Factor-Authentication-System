<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Two-Factor Authentication System | Login</title>

    <!-- CSS -->
    <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Roboto:400,100,300,500">
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <link rel="stylesheet" href="/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" href="/stylesheets/form-elements.css">
    <link rel="stylesheet" href="/stylesheets/style.css">

    <style>
        /* Center everything */
        .top-content .inner-bg {
            padding-top: 40px;
            /* padding-bottom: 40px; */
        }

        /* Center form column */
        .login-wrapper {
            display: flex;
            justify-content: center;
            /* margin-top: 20px; */
        }

        /* Center the register/login buttons text */
        .form-bottom form p {
            text-align: center;
            margin-top: 10px;
        }

        /* Center GitHub login block */
        .social-login {
            text-align: center;
            margin-top: 25px;
        }

        /* Center the logo */
        .top-logo {
            text-align: center;
            /* margin-bottom: 20px; */
        }
        .top-content .row img{
            width: 220px;
            height: 140px;
        }
    </style>

</head>

<body>

    <!-- Top content -->
    <div class="top-content">

        <div class="inner-bg">
            <div class="container">

                <!-- Centered Logo -->
                <div class="row">
                    <div class="col-sm-12 top-logo">
                        <a href="/">
                            <img src="/img/2fa_1.png"  alt="2fa logo">
                        </a>
                    </div>
                </div>

                <!-- Center Login Form -->
                <div class="row login-wrapper">

                    <div class="col-sm-5">

                        <div class="form-box">
                            <div class="form-top">
                                <div class="form-top-left">
                                    <h3>Login to 2FA System</h3>
                                    <p>Enter username and password:</p>
                                </div>
                                <div class="form-top-right">
                                    <i class="fa fa-lock"></i>
                                </div>
                            </div>

                            <div class="form-bottom">
                                <form role="form" action="/login" method="post" class="login-form">
                                    <div class="form-group">
                                        <input autocomplete="off" type="text" name="username"
                                            placeholder="Username..."
                                            class="form-username form-control" id="form-username">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" name="password"
                                            placeholder="Password..."
                                            class="form-password form-control" id="form-password">
                                    </div>
                                    <button type="submit" class="btn btn-block">Login</button>

                                    <p>OR</p>

                                    <a href="/register" class="btn btn-block">Register</a>
                                </form>
                            </div>
                        </div>

                        <!-- Social Login -->
                        <div class="social-login">
                            <h3>Login with:</h3>
                            <a class="btn btn-link-2" href="/login/github">
                                <i class="fa fa-github"></i> Github
                            </a>
                        </div>

                    </div>
                </div>

            </div>
        </div>

    </div>

    <!-- Footer -->
    <footer>
        <div class="container">
            <div class="row">

                <div class="col-sm-8 col-sm-offset-2">
                    <div class="footer-border"></div>
                    <p>Created By Utkarsh Srivastav @2025 All Rights Reserved <i class="fa fa-smile-o"></i></p>
                </div>

            </div>
        </div>
    </footer>

    <!-- Javascript -->
    <script src="/js/jquery-1.11.1.min.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/jquery.backstretch.min.js"></script>
    <script src="/js/scripts.js"></script>

</body>

</html>
